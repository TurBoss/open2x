config BR2_PACKAGE_SDL_IMAGE
	bool "SDL_image"
	default n
	select BR2_PACKAGE_ZLIB
	select BR2_PACKAGE_LIBPNG
	select BR2_PACKAGE_JPEG
	select BR2_PACKAGE_TIFF
	depends BR2_PACKAGE_SDL
	help

	  SDL_image adds support for various image formats
	  (such as png) to SDL.

choice
	prompt "SDL_image Version"
	depends BR2_PACKAGE_SDL_IMAGE
	default BR2_PACKAGE_SDL_IMAGE_VERSION_1_2_5
	help
	  Select the version of SDL you wish to use.

	config BR2_PACKAGE_SDL_IMAGE_VERSION_1_2_5
		bool "1.2.5"

	config BR2_PACKAGE_SDL_IMAGE_VERSION_LATEST
		bool "Latest"
endchoice

config BR2_PACKAGE_SDL_IMAGE_VERSION
	string
	default "1.2.5"     if BR2_PACKAGE_SDL_IMAGE_VERSION_1_2_5
	default "latest"      if BR2_PACKAGE_SDL_IMAGE_VERSION_LATEST
