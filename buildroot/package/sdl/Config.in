config BR2_PACKAGE_SDL
	bool "SDL"
	depends BR2_gp2x
	default n
	help

	  SDL is a cross platform multimedia library often
	  used to write games.

choice
	prompt "SDL Version"
	depends BR2_PACKAGE_SDL
	default BR2_PACKAGE_SDL_VERSION_LATEST
	help
	  Select the version of SDL you wish to use.

#	config BR2_PACKAGE_SDL_VERSION_1_2_9
#		bool "1.2.9"

	config BR2_PACKAGE_SDL_VERSION_LATEST
		bool "Latest"
endchoice

config BR2_PACKAGE_SDL_VERSION
	string
#	default "1.2.9"     if BR2_PACKAGE_SDL_VERSION_1_2_9
	default "latest"      if BR2_PACKAGE_SDL_VERSION_LATEST
